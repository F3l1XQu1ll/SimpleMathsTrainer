<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity"
	minHeight="-Infinity" minWidth="-Infinity"
	xmlns="http://javafx.com/javafx/8.0.171"
	xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.MainGui">
	<center>
		<HBox spacing="10.0" BorderPane.alignment="CENTER">
			<children>
				<TextField fx:id="tf_operand1" alignment="CENTER"
					editable="false" />
				<TextField fx:id="tf_operator" alignment="CENTER"
					editable="false" />
				<TextField fx:id="tf_operand2" alignment="CENTER"
					editable="false" />
				<Label alignment="CENTER" text="=" />
				<TextField fx:id="tf_answer" alignment="CENTER"
					editable="true" />
				<Button fx:id="btn_check" mnemonicParsing="false"
					onAction="#check" text="Check" />
			</children>
		</HBox>
	</center>
	<bottom>
		<HBox alignment="CENTER" spacing="10.0"
			BorderPane.alignment="CENTER">
			<children>
				<Button fx:id="btn_quit" mnemonicParsing="false"
					onAction="#quit" text="Quit" />
			</children>
			<BorderPane.margin>
				<Insets top="10.0" />
			</BorderPane.margin>
		</HBox>
	</bottom>
	<padding>
		<Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
	</padding>
</BorderPane>
